{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "src/interfaces"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
